<addons>
<addon id="plugin.program.mattboxwizard" name="Mattbox Wizard" version="0.0.3" provider-name="Mattitch">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Mattbox Wizard</summary>
    <description lang="en">Mattbox Wizard - automatic update of your custom build</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.mattboxtv" name="Mattbox TV" version="0.6" provider-name="Mattitch">
    <requires>
        <import addon="xbmc.python" version="2.19.0" />
        <import addon="script.module.universalscrapers" version="1.0.0" />
        <import addon="script.module.python.koding.aio" version="0.9.6.6" />
        <import addon="script.module.beautifulsoup" version="3.2.1" />
        <import addon="script.module.requests" version="2.9.1" />
        <import addon="script.module.addon.common" version="2.0.0" />
        <import addon="script.module.xmltodict" version="0.9.0" />
        <!--<import addon="script.module.web-pdb" version="1.0"/>-->
        <import addon="script.module.resolveurl" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="[login|startup]" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Cheers to Jen Devs</summary>
        <description lang="en">As of May, 2018 this is a community maintained template for learning purposes.</description>
